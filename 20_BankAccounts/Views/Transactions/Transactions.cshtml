@model BankAccounts.Models.TransactionsViewModel


@{
    ViewData["Title"] = "Account";
}
<a href="/logout">logout</a>
<h1>Welcome @ViewBag.CurrUser.first @ViewBag.CurrUser.last</h1>

<h4>Current Balance: @ViewBag.CurrUser.balance</h4>

    <form action="Add" method="post">
        <label for="amount">Amount</label>
        <input type="number" name="amount">
        <input class="submit" type="submit" value="Submit">
    </form>
            <p>@ViewBag.error</p>
<table class="table table-striped table-bordered">
   <thead>
        <tr>
            <th>Amount</th>
            <th>Transaction Type</th>
            <th>Date</th>
        </tr>
   </thead>
   <tbody>
@{
    foreach(var trans in ViewBag.AllTransactions ){
        <tr>
            <td>@trans.amount</td>
            <td>@trans.type</td>
            <td>@trans.created_at</td>
        </tr>
    }
}
   </tbody>
</table>
